{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "timezone": "Europe/Paris",
  "labels": [
    "dependencies"
  ],
  "kubernetes": {
    "fileMatch": ["^clusters/k3s/.+\\.yaml$"]
  },
  "helmv3": {
    "fileMatch": ["^clusters/k3s/.+/helmrelease\\.yaml$"]
  },
  "packageRules": [
    {
      "description": "Group all Kubernetes/Helm updates together",
      "matchManagers": ["kubernetes", "helmv3", "flux"],
      "groupName": "k3s dependencies"
    },
    {
      "description": "Auto-merge patch updates for stable images",
      "matchUpdateTypes": ["patch"],
      "matchDatasources": ["docker"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Separate major updates and require manual approval",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "assignees": []
  }
}
