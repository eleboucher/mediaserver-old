{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "pinDigests": true,
  "timezone": "Europe/Paris",
  "labels": [
    "dependencies"
  ],
  "flux": {
    "fileMatch": [
      "^clusters/.+\\.yaml$"
    ]
  },
  "helmv3": {
    "fileMatch": [
      "^clusters/.+/helmrelease\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "description": "Group all Kubernetes/Helm updates together",
      "matchManagers": [
        "kubernetes",
        "helmv3",
        "flux"
      ],
      "groupName": "k3s dependencies",
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "description": "Auto-merge patch updates for stable images",
      "matchUpdateTypes": [
        "patch"
      ],
      "matchDatasources": [
        "docker"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Separate major updates and require manual approval",
      "matchUpdateTypes": [
        "major"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Pin dependencies separately to avoid conflicts",
      "matchUpdateTypes": [
        "pin",
        "digest"
      ],
      "groupName": "pin dependencies",
      "automerge": true
    }
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "assignees": []
  }
}
